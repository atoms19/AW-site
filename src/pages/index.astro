    <style>
		.hero{
		  padding:1rem 0rem;

		}
		.profile-img{
		     width:9rem;
		     height:9rem;
			  display:flex;
			  background:#bbaffa;
			  /* background-image: linear-gradient(to right top, #584b96, #7063ae, #897bc7, #a195e0, #bbaffa); */
			  border-radius:50%;
			  justify-content:center;
			  align-items:center;
			  margin:0;
			  --ringcolor:#372c73;
		}
		.prof-o,.prof-o2{
		    border:solid 0.1rem var(--ringcolor);
			   border-radius:50%;
				  padding:2rem;
		}
		.prof-o{
		    position:relative;
			   animation:rotate 2.9s linear infinite;
		}
		.prof-o:after{
		    border-radius:50%;
			 background:var(--ringcolor);
				  padding:0.4rem;
				    content:"";
					   position: absolute;
						  top:-8%;
						   
		}
		.prof-o:before{
		    border-radius:50%;
			   background:var(--ringcolor);
				  padding:0.4rem;
				    content:"";
					   position: absolute;
						  bottom:-8%;
						    
		}
		.prof-n{
		    padding:0.8rem;
			   background:var(--ringcolor);
				  border-radius:50%;
				    opacity:0.97;
		}
		.prof-o2{
		    padding:1rem;
		}

		.profile{
		    padding-top:3rem;
			   display:flex;
				  justify-content:center;
		}
@keyframes rotate{
  0%{
    transform:rotate (0deg);
  }
  100%{
    transform:rotate(360deg);
  }
}

		</style>
